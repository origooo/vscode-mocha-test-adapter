{
  "name": "copilot-mocha-extension",
  "displayName": "Mocha Test Adapter",
  "description": "Mocha test adapter for VS Code using the native Testing API",
  "version": "0.0.12",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "type": "module",
  "packageManager": "yarn@4.6.0",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "workspaceContains:**/*.test.{js,ts}",
    "workspaceContains:**/*.spec.{js,ts}"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mocha-extension.refreshTests",
        "title": "Refresh Tests",
        "category": "Mocha"
      },
      {
        "command": "mocha-extension.goToTest",
        "title": "Go to Test",
        "category": "Mocha",
        "icon": "$(go-to-file)"
      },
      {
        "command": "mocha-extension.copyTestName",
        "title": "Copy Test Name",
        "category": "Mocha",
        "icon": "$(clippy)"
      },
      {
        "command": "mocha-extension.runTestWithGrep",
        "title": "Run Only This Test",
        "category": "Mocha",
        "icon": "$(play)"
      },
      {
        "command": "mocha-extension.revealInExplorer",
        "title": "Reveal in Explorer",
        "category": "Mocha",
        "icon": "$(file-directory)"
      }
    ],
    "menus": {
      "testing/item/context": [
        {
          "command": "mocha-extension.goToTest",
          "when": "testId",
          "group": "inline@1"
        },
        {
          "command": "mocha-extension.copyTestName",
          "when": "testId",
          "group": "navigation@1"
        },
        {
          "command": "mocha-extension.runTestWithGrep",
          "when": "testId",
          "group": "navigation@2"
        },
        {
          "command": "mocha-extension.revealInExplorer",
          "when": "testId",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.1",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
